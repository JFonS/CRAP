global car;

timeline Main()
{
	// Creem 100 keyframes usant un while.
	// L'animació serà el cotxe avançant amb petites recessions 

	i = 0;
	advance = false;
	speed = 10;
	while (i < 100)
	{
		// Cada segon (i) avança 10 o retrocedeix 5.
		if (advance) 
		{ 
			key [[ i ]]
			{
				car.Position.x -> i * 10; 
			}
		}
		else   
		{ 
			key [[ i ]]
			{
				car.Position.x -> (i-1) * 10 - 5.0;
			} 
		}
		advance = not advance;
		i = i + 1;
	}
}
